public class Conversation
{
  public int ParentID { get; set; }
  public string Description { get; set; }
  public string FileName { get; set; }
}

public class DeskAPIPostTicket
{
  public string status { get; set; }
  public string email { get; set; }
  public string type { get; set; }
  public string subject { get; set; }
  public string description { get; set; }
  public int priority { get; set; }
  public string assign_to { get; set; }
  public string group { get; set; }
  public string category { get; set; }
  [JsonProperty(PropertyName = "sub category")]
  public string subcategory { get; set; }
  public CustomFields custom_fields { get; set; }
  [JsonIgnore]
  public List<string> Attachments { get; set; } = new List<string>();
}

public class CustomFields
{
  public string cf_Item { get; set; }
  public string cf_Mode { get; set; }
  public string cf_Caller { get; set; }
  public string cf_Pager { get; set; }
  public string cf_Requester_Name { get; set; }
  public string cf_District { get; set; }
}


public class DeskApIPostNote
{
  [JsonIgnore]
  public int TicketID { get; set; }
  public string body { get; set; }
  public string agent_email { get; set; }
  public string notify_emails { get; set; }
  [JsonIgnore]
  public bool IsPrivate { get; set; } = false;
  private int private_note => IsPrivate ? 1 : 0;
  [JsonIgnore]
  public List<string> Attachments { get; set; } = new List<string>();
}
